{
  "name": "nice-react-button",
  "version": "3.1.0",
  "description": "A flexible and customizable React button component with built-in theming support",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/niceprototypes/nice-react-button.git"
  },
  "homepage": "https://github.com/niceprototypes/nice-react-button#readme",
  "bugs": {
    "url": "https://github.com/niceprototypes/nice-react-button/issues"
  },
  "keywords": [
    "react",
    "button",
    "component",
    "ui",
    "styled-components",
    "typescript",
    "nice-react",
    "theming",
    "accessible",
    "icons"
  ],
  "author": "Nice Prototypes",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "build:types": "tsc --emitDeclarationOnly",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist"
